{
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "plugins": [],
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "build.mjs"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**"
  ]
}
